@model MovieReviews.Models.LogInModel
@{
    ViewBag.Title = "Login";
}
<h1 class="display-4">@MovieReviews.Resources.Resource.Login</h1>
<hr />
@if (ViewBag.MailSent == true)
{
<text> <p class="lead">Thanks for registration. A greeting message has been sent to your email.</p>   </text>
}
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group col-md-3">
        @Html.LabelFor(model=>model.UserName)
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group col-md-3">
        @Html.LabelFor(model => model.Password)
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RememberMe)
        @Html.EditorFor(model => model.RememberMe, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">
        @MovieReviews.Resources.Resource.Login
    </button>
}
 @using (Html.BeginForm("GuestLogin", "Auth",FormMethod.Get))
 {
<input type="submit" class="btn btn-sm" value="@MovieReviews.Resources.Resource.LoginAsGuest" />
        }
<script src="~/Scripts/jquery.validate.min.js"></script>