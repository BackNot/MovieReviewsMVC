@model MovieReviews.Models.Movie
<div class="table-responsive">
    <table class="table table-borderless text-white">
        @{
            <tr>
                <th>Image:</th>
                <th>ID:</th>
                <th>Name:</th>
                <th>Name:</th>
                <th>Year:</th>
                <th>Description:</th>
                <th>Category</th>
                <th>Stars:</th>
                <th>Review:</th>
            </tr>
            <tr>

                <td>
                    @Model.PathToImage
                </td>
                <td>@Model.MovieId </td>
                <td>@Model.MovieName </td>
                <td>@Model.MovieYear</td>
                <td>@Model.Description</td>
                <td>@Model.Category</td>
                <td>@Model.Stars</td>
                <td>@Model.Review</td>
                <td>
                    @using (Html.BeginForm("EditMovies", "Admin", new { Id = @Model.MovieId }, FormMethod.Get))
                    {
                        <button class="btn btn-sm">Edit</button>
                    }
                </td>
            </tr>
        }
       
    </table>
</div>