@model MovieReviews.Models.LogInModel
@{
    ViewBag.Title = "Login";
}
<h1 class="display-4">Login</h1>
<hr />
@Html.AntiForgeryToken()
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group col-md-3">
        <label>Username</label>
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group col-md-3">
        <label>Password</label>
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
    </div>

    <div class="form-group">
        <label>Remember me ?</label>
        @Html.EditorFor(model => model.RememberMe, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">
        Login
    </button>
}
 @using (Html.BeginForm("GuestLogin", "Auth",FormMethod.Get))
 {
<input type="submit" class="btn btn-sm" value="Login as guest" />
        }
@Html.ValidationSummary()